# ═══════════════════════════════════════════════
# CampusIQ — Environment Configuration
# Copy this file to .env and fill in your keys
# ═══════════════════════════════════════════════

# Application
APP_NAME=CampusIQ
DEBUG=True
SECRET_KEY=campusiq-dev-secret-key-change-in-production

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://campusiq:campusiq_secret@localhost:5432/campusiq

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── Google Gemini (required) ─────────────────────────────────────
# Primary fallback key — used when a module pool is empty
GOOGLE_API_KEY=your-gemini-api-key-here
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GOOGLE_MODEL=gemini-1.5-flash

# ── Per-module Gemini key pools ──────────────────────────────────
# Comma-separate multiple keys for rate-limit isolation per module.
# If a pool is empty the primary GOOGLE_API_KEY is used automatically.
#
#  Get free keys at: https://aistudio.google.com/app/apikey
#  Recommended: 2-3 keys per high-traffic module (nlp, chat)

GEMINI_NLP_KEYS=key1,key2,key3        # academic queries & copilot planner
GEMINI_PREDICTIONS_KEYS=key1,key2     # ML grade predictions
GEMINI_FINANCE_KEYS=key1              # finance / invoicing module
GEMINI_HR_KEYS=key1                   # HR & payroll module
GEMINI_CHAT_KEYS=key1,key2            # conversational assistant
GEMINI_RETRY_ETA_SECONDS=60

# ── Conversational Ops AI ────────────────────────────────────────
OPS_CONFIDENCE_THRESHOLD=0.75
OPS_MAX_PREVIEW_ROWS=50
OPS_SENIOR_ROLES=admin
OPS_REQUIRE_2FA_HIGH_RISK=True

# ML Model Path
MODEL_PATH=app/ml/models
