# ═══════════════════════════════════════════════
# CampusIQ — Environment Configuration
# Copy this file to .env and edit as needed
# ═══════════════════════════════════════════════

# Application
APP_NAME=CampusIQ
DEBUG=True
SECRET_KEY=campusiq-dev-secret-key-change-in-production

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://campusiq:campusiq_secret@localhost:5432/campusiq

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma:2b

# LLM Provider (ollama | google)
LLM_PROVIDER=ollama

# Google AI Studio (Gemini) - used when LLM_PROVIDER=google
GOOGLE_API_KEY=
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GOOGLE_MODEL=gemini-1.5-flash

# ML Model Path
MODEL_PATH=app/ml/models
